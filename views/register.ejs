
<% include ./partials/header %>

<div class="container-fluid">
	<div class="row">
		<div class="col-md-6">
			<div class="edge bg-primary border border-dark">
				<h1 class="py-2 ml-2 text-white">Sign Up For Free</h1>
			</div>
			<form action="/register" method="POST">
				First Name:
				<input class="mt-2" type="text" name="firstname" placeholder="" required>
				Last Name:
				<input class="mt-4" type="text" name="lastname" placeholder="" required>
				<br>
				Username:
				<input class="mt-4" type="text" name="username" placeholder="username" required>
				<br>
				Date Of Birth:
				<input class="mt-4" type="date" name="bday" required>
				<br>
				Password:
    			<input class="mt-4" type="password" name="password" placeholder="password">
   	 			<br>
    			<input class="mt-4" type="checkbox" name="terms" value="" required>  I accept the terms of this page.
    			<br>
    			<button class="mt-5 btn btn-lg btn-primary border border-dark">Ready To Sign Up</button>
			</form>
		</div>
	</div>
</div>


<% include ./partials/footer %>