<% include ../partials/header %>

<div class="container mt-5">
	<div class="row">
		<div class="col-md-12">
			<form action="/campgrounds" method="POST">
				<h2 class="mb-5">Add Site And Share Your Insights</h2>
				<div class="form-group">
					Site's Name:
					<input type="text" name="name" placeholder="name of site">
					Price:
					<input type="number" name="price" placeholder="estimate price" min="0.01" step="0.01"> 
				</div>
				<div class="form-group">
					Image's Link:
					<input class="left" type="text" name="image" placeholder="image link goes here"> 
				</div>
				<div class="form-group">
					<label><em>Your Story Goes Below</em></label>
					<div>
						<textarea style="width: 500px; height: 100px;" name="description"></textarea>
					</div>
				</div> 
				<div>
					<input type="submit" class="btn btn-primary btn-lg border border-dark" value="Submit">
				</div>
			</form>
		</div>
	</div>	
</div>



<% include ../partials/footer %>