<% include ../partials/header %>

<div class="container mt-5">
	<div class="row">
		<div class="col-md-12">
			<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
				<h4 class="mb-5">Edit Details Of <%= campground.name %></h4>
				<div class="form-group">
					Site's Name:
					<input type="text" name="campground[name]" value="<%= campground.name %>">
					Price:
					<input type="number" name="campground[price]" value="<%= campground.price %>" min="0.01" step="0.01"> 
				</div>
				<div class="form-group">
					Image's Link:
					<input type="text" name="campground[image]" value="<%= campground.image %>"> 
				</div>
				<div class="form-group">
					<label><em>Edit Your Story Below</em></label>
					<div>
						<textarea style="width: 500px; height: 100px;" name="campground[description]" value="<%= campground.description %>"></textarea>
					</div>
				</div>
				<div>
					<input type="submit" class="btn btn-primary btn-lg" value="Submit Changes">
				</div>
			</form>
		</div>
	</div>	
</div>


<% include ../partials/footer %>